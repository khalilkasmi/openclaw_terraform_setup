# OpenClaw Terraform Variables Example
# Copy this file to terraform.tfvars and fill in your values
# NEVER commit terraform.tfvars to version control (it may contain secrets)
#
# RECOMMENDED: Use environment variables for sensitive values:
#   export TF_VAR_tailscale_auth_key="tskey-auth-YOUR_KEY_HERE"

# -----------------------------------------------------------------------------
# TAILSCALE (Recommended for secure access)
# -----------------------------------------------------------------------------

# Enable Tailscale for secure remote access
enable_tailscale = true

# Get your auth key from: https://login.tailscale.com/admin/settings/keys
# Create a "Reusable" and "Ephemeral" key for best security
# REQUIRED: Set via TF_VAR_tailscale_auth_key environment variable (recommended)
# or uncomment and set the value below (less secure)
# tailscale_auth_key = ""

# Hostname in your Tailnet (default: "openclaw")
# tailscale_hostname = "openclaw"

# -----------------------------------------------------------------------------
# AWS CONFIGURATION
# -----------------------------------------------------------------------------

# AWS Region (default: eu-central-1)
# aws_region = "eu-central-1"

# Instance type (t2.micro for free tier, t3.small recommended)
# instance_type = "t3.small"

# Root volume size in GB
# root_volume_size = 20

# -----------------------------------------------------------------------------
# SECURITY CONFIGURATION (Recommended for production)
# -----------------------------------------------------------------------------

# Enable VPC Flow Logs for network visibility and security monitoring
# enable_vpc_flow_logs = true

# Enable termination protection for production instances
# termination_protection = true

# -----------------------------------------------------------------------------
# OPTIONAL: DIRECT SSH ACCESS (not recommended if using Tailscale)
# -----------------------------------------------------------------------------

# Enable direct SSH access (disabled by default when using Tailscale)
# enable_ssh_access = false

# If enabling SSH, restrict to your IP (NEVER use 0.0.0.0/0)
# ssh_allowed_cidr = "YOUR_IP/32"
